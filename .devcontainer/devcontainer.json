{
  "name": "Python Service Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "runServices": ["app", "db", "docs"],
  "service": "app",
  "workspaceFolder": "/workspace",

  // Monta o arquivo .gitconfig do usuário local dentro do container
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  // Opcional: você pode remover o containerEnv do git se preferir pegar do .gitconfig
  /* "containerEnv": {
    "GIT_AUTHOR_NAME": "Seu Nome",
    "GIT_AUTHOR_EMAIL": "seu-email@example.com",
    "GIT_COMMITTER_NAME": "Seu Nome",
    "GIT_COMMITTER_EMAIL": "seu-email@example.com"
  }, */
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylint",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "forwardPorts": [8080, 5432],
  "remoteUser": "vscode"
}
